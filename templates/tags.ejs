<!doctype html>
<html lang=en-US>
<head>
  <%- include('meta') %>
  <title>Tags</title>
</head>
<body>
  <%- include('header') %>
  <%- include('nav') %>
  <main role=main>
    <h2>Tags</h2>
    <ol class=posts>
    <% for (const tag of tags) { %>
      <li>
        <a href="<%- tag.href %>"><%= tag.text %></a>
        (<%= tag.postCount %> <%- tag.postCount === 1 ? 'post' : 'posts' %>)
      </li>
    <% } %>
    </ol>
  </main>
  <%- include('footer') %>
</body>
</html>
